# Anwendung & Deployment
# @meta {"description":"Node.js Umgebung (development oder production)","scopes":["dev","prod"],"defaults":{"dev":"development","prod":"production"}}
NODE_ENV=development
# @meta {"description":"Öffentliche URL des Frontends (wird im Browser genutzt)","scopes":["dev","prod"],"defaults":{"dev":"http://localhost:3000","prod":"https://example.com"}}
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# @meta {"description":"Docker Compose Profile, die standardmäßig aktiviert werden","scopes":["dev","prod"],"defaults":{"dev":"dev","prod":"prod"}}
COMPOSE_PROFILES=dev
# @meta {"description":"Domain ohne Schema für Caddy/HTTPS","scopes":["prod"],"defaults":{"prod":"example.com"}}
SITE_DOMAIN=localhost
# @meta {"description":"E-Mail für Let's-Encrypt-Benachrichtigungen","scopes":["prod"],"defaults":{"prod":"admin@example.com"}}
ACME_EMAIL=admin@example.com
# @meta {"description":"Öffentliche Domain für n8n (falls separat erreichbar)","scopes":["prod"],"defaults":{"prod":"n8n.example.com"},"features":["n8n"]}
N8N_DOMAIN=
# @meta {"description":"Optional: neues Git-Remote (git@github.com:user/repo.git) für automatische Umschaltung","scopes":["dev","prod"]}
NEW_REMOTE_URL=

# Postgres
# @meta {"description":"Postgres Benutzername","scopes":["dev","prod"],"defaults":{"dev":"postgres","prod":"postgres"}}
POSTGRES_USER=postgres
# @meta {"description":"Postgres Datenbankname","scopes":["dev","prod"],"defaults":{"dev":"app","prod":"app"}}
POSTGRES_DB=app
# @meta {"description":"Postgres Passwort (wird auch in DATABASE_URL verwendet)","scopes":["dev","prod"],"defaults":{"dev":"change-me","prod":"change-me"}}
POSTGRES_PASSWORD=change-me
# @meta {"description":"Direkter Prisma Connection-String (Passwort hier hart eintragen, keine ${...}-Platzhalter)","scopes":["dev","prod"],"defaults":{"dev":"postgresql://postgres:change-me@db:5432/app?schema=public","prod":"postgresql://postgres:change-me@db:5432/app?schema=public"}}
DATABASE_URL=postgresql://postgres:change-me@db:5432/app?schema=public

# Auth
# @meta {"description":"Token für geschützte API-Routen (Header X-Admin-Token)","scopes":["dev","prod"],"defaults":{"dev":"please-change-me","prod":"please-change-me"}}
ADMIN_TOKEN=please-change-me
# @meta {"description":"Nur für lokale Übungen auf true setzen, sonst false lassen","scopes":["dev","prod"],"defaults":{"dev":"true","prod":"false"}}
AUTH_DISABLED=false

# n8n (Basic Auth aktiv, auch wenn nur lokal erreichbar)
# @meta {"description":"n8n Basic-Auth Benutzer","scopes":["dev","prod"],"defaults":{"dev":"admin","prod":"admin"},"features":["n8n"]}
N8N_BASIC_AUTH_USER=admin
# @meta {"description":"n8n Basic-Auth Passwort","scopes":["dev","prod"],"defaults":{"dev":"change-me","prod":"change-me"},"features":["n8n"]}
N8N_BASIC_AUTH_PASSWORD=change-me

# n8n E-Mail / SMTP
# @meta {"description":"Mailmodus für n8n (smtp, sendmail, ...)", "scopes":["dev","prod"],"defaults":{"dev":"smtp","prod":"smtp"},"features":["n8n"]}
N8N_EMAIL_MODE=smtp
# @meta {"description":"SMTP Host für n8n (lokal z. B. Mailpit)","scopes":["dev","prod"],"defaults":{"dev":"mailpit","prod":"smtp.example.com"},"features":["n8n"]}
N8N_SMTP_HOST=mailpit
# @meta {"description":"SMTP Port","scopes":["dev","prod"],"defaults":{"dev":"1025","prod":"587"},"features":["n8n"]}
N8N_SMTP_PORT=1025
# @meta {"description":"true, wenn SMTP über SSL laufen soll","scopes":["dev","prod"],"defaults":{"dev":"false","prod":"true"},"features":["n8n"]}
N8N_SMTP_SSL=false
# @meta {"description":"SMTP Benutzername (falls benötigt)","scopes":["dev","prod"],"features":["n8n"]}
N8N_SMTP_USER=
# @meta {"description":"SMTP Passwort (falls benötigt)","scopes":["dev","prod"],"features":["n8n"]}
N8N_SMTP_PASS=
# @meta {"description":"Absenderadresse für n8n E-Mails","scopes":["dev","prod"],"defaults":{"dev":"\"n8n <no-reply@localhost>\"","prod":"\"n8n <no-reply@example.com>\""},"features":["n8n"]}
N8N_SMTP_SENDER="n8n <no-reply@localhost>"
# @meta {"description":"Protokoll für generierte Links (http/https)","scopes":["dev","prod"],"defaults":{"dev":"http","prod":"https"},"features":["n8n"]}
N8N_PROTOCOL=http
# @meta {"description":"Host/Domain der in n8n-Links verwendet wird","scopes":["dev","prod"],"defaults":{"dev":"localhost:5678","prod":"n8n.example.com"},"features":["n8n"]}
N8N_HOST=localhost:5678
# @meta {"description":"Externe Webhook-URL (falls n8n hinter Proxy läuft)","scopes":["dev","prod"],"defaults":{"dev":"http://localhost:5678/webhook/chat","prod":"https://n8n.example.com/webhook/chat"},"features":["n8n"]}
N8N_WEBHOOK_URL=

# pgAdmin (nur lokal nötig)
# @meta {"description":"Login-E-Mail für pgAdmin","scopes":["dev"],"defaults":{"dev":"admin@example.com"}}
PGADMIN_DEFAULT_EMAIL=admin@example.com
# @meta {"description":"Passwort für pgAdmin","scopes":["dev"],"defaults":{"dev":"change-me"}}
PGADMIN_DEFAULT_PASSWORD=change-me

# n8n Chatbot
# @meta {"description":"Webhook-URL für den Chatbot-Flow","scopes":["dev","prod"],"defaults":{"dev":"http://localhost:5678/webhook/chat","prod":"https://n8n.example.com/webhook/chat"},"features":["n8n"]}
N8N_CHATBOT_WEBHOOK_URL=set-here-the-production-url-from-your-n8n-webhook-trigger
